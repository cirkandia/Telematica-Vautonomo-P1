{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Python Observer",
      "type": "process",
      "command": "python",
      "args": ["main.py", "--host", "127.0.0.1", "--port", "5000", "--mode", "observer"],
      "options": { "cwd": "${workspaceFolder}/client-python" },
      "problemMatcher": []
    },
    {
      "label": "Run Python Admin",
      "type": "process",
      "command": "python",
      "args": ["main.py", "--host", "127.0.0.1", "--port", "5000", "--mode", "admin", "--user", "admin", "--pass", "changeme"],
      "options": { "cwd": "${workspaceFolder}/client-python" },
      "problemMatcher": []
    },
    {
      "label": "Run Java Observer",
      "type": "process",
      "command": "java",
      "args": ["-cp", "target/classes", "com.tuapp.Client", "--host", "127.0.0.1", "--port", "5000", "--mode", "observer"],
      "options": { "cwd": "${workspaceFolder}/client-java" },
      "problemMatcher": []
    },
    {
      "label": "Run Java Admin",
      "type": "process",
      "command": "java",
      "args": ["-cp", "target/classes", "com.tuapp.Client", "--host", "127.0.0.1", "--port", "5000", "--mode", "admin", "--user", "admin", "--pass", "changeme"],
      "options": { "cwd": "${workspaceFolder}/client-java" },
      "problemMatcher": []
    }
  ]
}
